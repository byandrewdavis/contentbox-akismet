<?xml version="1.0"?>
<project name="build" basedir="." default="do.archive">
	<!-- dynamic values for build -->
	<tstamp prefix="start"/>
	<property name="version" value="1.0.0" />
	
	<!-- Init -->
	<target name="init" description="Init">
		
	</target>
	
	<target name="do.archive" depends="init">
		<mkdir dir="temp/contentbox-akismet" />
		<copy todir="temp/contentbox-akismet">
			<fileset dir=".">
		      	<exclude name="builds/**"/>
				<exclude name="build.xml"/>
				<exclude name="settings.xml"/>
				<exclude name=".DS_Store"/>
				<exclude name=".gitignore"/>
				<exclude name=".project"/>
				<exclude name=".settings/**"/>
				<exclude name="temp/**"/>
				<exclude name="test/**"/>
		    </fileset>
		</copy>
		
		<zip destfile="builds/contentbox-akismet-${version}.zip">
			<fileset dir="temp/">
				<exclude name=".DS_Store"/>
				<exclude name=".project"/>
			</fileset>
		</zip>
		
		<delete dir="temp" />
	</target>

</project>
